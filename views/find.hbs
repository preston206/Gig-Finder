            Saved
        </button>
        --}} {{!--
        <span class="text-light mr-3"> | </span> --}}

        <div class="btn-group btn-group-lg mb-1" role="group">
            <button type="button" class="btn btn-primary" id="btn-refresh-jobs">
                Refresh
            </button>
        </div>

    </div>

    <div class="container-fluid">
        <div class="row justify-content-center margin-bottom-1">

            <!-- col-1 for spacing -->
            <div class="col-1 spacing-col"></div>

            <div id="map" class="col-lg bg-light text-center rounded border border-dark">
                <img src="/img/regionsMap.png" id="regionsMap" class="img-fluid rounded align-middle" alt="Lake Washington regions map">
            </div>

            <div id="all-job-listings" class="col-lg ml-5 mr-5 bg-light rounded border border-dark">
            </div>

            <div id="job-description" class="col-lg bg-light rounded border border-dark">
            </div>

